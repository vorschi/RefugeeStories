<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
    </style>

    <!--ActionBar-->
    <style name="AppActionBarStyle" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
